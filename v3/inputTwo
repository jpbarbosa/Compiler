public class gcdRrec{
	static int a;

	public static void main(String[] args) {
		int a, b;
		
		a = 315;
		b = 1932;
		
		System.out.println(gcd(a,b));

		for (a = 0; a < 2; a++){
			int c;			
			b = 2;
			c = 1;
			
		}

		if (a == 2 && b > 4)
			System.out.println(gcd(a,b));
	}

	public static int gcd(int a, int b) {
		if (  a == b || b == 0)
			return a;
		else if (   a ==    0  )
			return b;
		else if (a > b)
			return gcd(a % b, b);
		else /* b < a W*/
			return gcd(a, b % a);
	}
}

